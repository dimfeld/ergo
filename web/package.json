{
  "name": "ergo-web",
  "version": "0.0.1",
  "scripts": {
    "dev": "run-p dev:svelte dev:server",
    "dev:svelte": "svelte-kit dev --port ${PORT:-3000}",
    "dev:server": "cargo watch --ignore web -s 'cd web && pnpm generate-api-types && ../car run --release server | bunyan'",
    "build": "run-s generate-api-types build:svelte",
    "build:svelte": "svelte-kit build",
    "preview": "run-s clean build && SERVE_DIR=build ../car run --release server | bunyan",
    "preview:svelte": "svelte-kit preview",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "run-s test -- --watch",
    "svench": "svench",
    "clean": "rimraf build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. .",
    "generate-api-types": "rimraf ../schemas/*.json && ../car run --release dev make-json-schema && node generate_api_types.js",
    "generate-ts-defs": "node scripts/build-types.mjs"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@sveltejs/adapter-static": "~1.0.0-next.26",
    "@sveltejs/adapter-vercel": "~1.0.0-next.40",
    "@sveltejs/kit": "~1.0.0-next.258",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.36",
    "@tailwindcss/forms": "~0.4.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/json-schema": "~7.0.9",
    "@types/lodash-es": "~4.17.5",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "broadcast-channel": "~4.8.0",
    "cssnano": "^5.0.16",
    "dotenv": "~14.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.4.0",
    "fast-glob": "~3.2.11",
    "jest": "^27.4.7",
    "jest-transform-css": "^2.1.0",
    "json-schema-to-typescript": "^10.1.5",
    "ky-universal": "~0.10.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-nested": "~5.0.6",
    "prettier": "~2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "prettier-plugin-tailwindcss": "~0.1.4",
    "rimraf": "~3.0.2",
    "source-map-support": "^0.5.21",
    "svelte": "~3.46.3",
    "svelte-check": "^2.4.0",
    "svelte-jester": "^2.1.5",
    "svelte-loader": "^3.1.2",
    "svelte-portal": "~2.1.2",
    "svelte-preprocess": "~4.10.2",
    "svench": "~0.2.0-31",
    "tailwindcss": "~3.0.18",
    "tippy.js": "^6.3.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "vite": "~2.7.13"
  },
  "type": "module",
  "dependencies": {
    "@codemirror/autocomplete": "~0.19.12",
    "@codemirror/closebrackets": "~0.19.0",
    "@codemirror/commands": "~0.19.8",
    "@codemirror/comment": "~0.19.0",
    "@codemirror/gutter": "~0.19.9",
    "@codemirror/highlight": "~0.19.7",
    "@codemirror/history": "~0.19.2",
    "@codemirror/lang-javascript": "~0.19.7",
    "@codemirror/lang-json": "~0.19.1",
    "@codemirror/language": "~0.19.7",
    "@codemirror/lint": "~0.19.3",
    "@codemirror/matchbrackets": "~0.19.3",
    "@codemirror/panel": "~0.19.1",
    "@codemirror/rangeset": "~0.19.6",
    "@codemirror/search": "~0.19.6",
    "@codemirror/state": "~0.19.6",
    "@codemirror/text": "~0.19.6",
    "@codemirror/theme-one-dark": "~0.19.1",
    "@codemirror/tooltip": "~0.19.13",
    "@codemirror/view": "~0.19.40",
    "@lezer/common": "~0.15.11",
    "@popperjs/core": "^2.11.2",
    "@sveltestack/svelte-query": "~1.6.0",
    "@typescript/vfs": "~1.3.5",
    "ajv": "~8.9.0",
    "cronstrue": "~1.123.0",
    "date-fns": "~2.28.0",
    "ergo-wasm": "link:../wasm/pkg",
    "fast-deep-equal": "~3.1.3",
    "focus-svelte": "~0.3.4",
    "json5": "~2.2.0",
    "just-camel-case": "~6.0.1",
    "just-capitalize": "~3.0.1",
    "just-clone": "~5.0.1",
    "just-debounce-it": "~3.0.1",
    "just-is-empty": "~3.1.1",
    "just-once": "~2.0.1",
    "just-pascal-case": "~3.0.1",
    "just-throttle": "~4.0.1",
    "just-zip-it": "~3.0.2",
    "ky": "~0.28.7",
    "lezer-json5": "~1.0.2",
    "localforage": "~1.10.0",
    "lodash-es": "~4.17.21",
    "path-browserify": "~1.0.1",
    "resolve.exports": "~1.1.0",
    "rollup": "~2.66.1",
    "sorters": "~1.0.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "./jest-setup.js"
    ],
    "transform": {
      "^.+\\.svelte$": [
        "./node_modules/svelte-jester/dist/transformer.mjs",
        {
          "preprocess": true
        }
      ],
      "^.+\\.(j|t)s$": "ts-jest",
      "^.+\\.p?css$": "jest-transform-css"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "extensionsToTreatAsEsm": [
      ".ts",
      ".svelte"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "useESM": true
      }
    }
  }
}
