{
  "name": "ergo-web",
  "version": "0.0.1",
  "scripts": {
    "dev": "run-p dev:svelte dev:server",
    "dev:svelte": "vite dev --port ${PORT:-3000} --host ${HOST:-127.0.0.1}",
    "dev:server": "cargo watch --ignore web -s 'cd web && pnpm generate-api-types && cargo run --release server | bunyan'",
    "build": "run-s generate-api-types generate-ts-defs sync-types build:svelte",
    "build:svelte": "vite build",
    "preview": "run-s clean build && SERVE_DIR=build cargo run --release server | bunyan",
    "preview:svelte": "vite preview",
    "sync-types": "svelte-kit sync",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "run-s test -- --watch",
    "clean": "rimraf build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. .",
    "generate-api-types": "rimraf ../schemas/*.json && cargo run --release dev make-json-schema && node generate_api_types.js",
    "generate-ts-defs": "node scripts/build-types.mjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@storybook/addon-essentials": "^7.0.0-beta.13",
    "@storybook/addon-interactions": "^7.0.0-beta.13",
    "@storybook/addon-links": "^7.0.0-beta.13",
    "@storybook/addon-svelte-csf": "3.0.0-next.3",
    "@storybook/blocks": "^7.0.0-beta.13",
    "@storybook/svelte": "^7.0.0-beta.13",
    "@storybook/sveltekit": "^7.0.0-beta.13",
    "@storybook/testing-library": "^0.0.13",
    "@sveltejs/adapter-static": "1.0.0-next.49",
    "@sveltejs/adapter-vercel": "1.0.0-next.85",
    "@sveltejs/kit": "1.0.0-next.581",
    "@tailwindcss/forms": "~0.5.3",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/json-schema": "~7.0.11",
    "@types/lodash-es": "~4.17.6",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "broadcast-channel": "~4.8.0",
    "cssnano": "^5.1.14",
    "dotenv": "~14.3.2",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "~0.6.8",
    "eslint-plugin-svelte3": "^3.4.0",
    "fast-glob": "~3.2.12",
    "jest": "^27.4.7",
    "jest-transform-css": "^2.1.0",
    "json-schema-to-typescript": "^10.1.5",
    "ky-universal": "~0.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-nested": "~6.0.0",
    "prettier": "~2.8.1",
    "prettier-plugin-svelte": "^2.9.0",
    "prettier-plugin-tailwindcss": "~0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "~3.0.2",
    "source-map-support": "^0.5.21",
    "storybook": "^7.0.0-beta.13",
    "storybook-dark-mode": "~2.0.4",
    "svelte": "~3.54.0",
    "svelte-check": "^2.10.2",
    "svelte-jester": "^2.1.5",
    "svelte-loader": "^3.1.2",
    "svelte-portal": "~2.2.0",
    "svelte-preprocess": "~4.10.7",
    "tailwindcss": "~3.2.4",
    "tippy.js": "^6.3.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "vite": "~4.0.0"
  },
  "type": "module",
  "dependencies": {
    "@codemirror/autocomplete": "~6.3.4",
    "@codemirror/commands": "~6.1.2",
    "@codemirror/lang-javascript": "~6.1.2",
    "@codemirror/lang-json": "~6.0.1",
    "@codemirror/language": "~6.3.1",
    "@codemirror/lint": "~6.1.0",
    "@codemirror/search": "~6.2.3",
    "@codemirror/state": "~6.1.4",
    "@codemirror/theme-one-dark": "~6.1.0",
    "@codemirror/view": "~6.7.0",
    "@lezer/common": "~1.0.2",
    "@lezer/highlight": "~1.1.3",
    "@popperjs/core": "^2.11.5",
    "@sveltestack/svelte-query": "~1.6.0",
    "@typescript/vfs": "~1.3.6",
    "ajv": "~8.9.0",
    "codemirror-json5": "~1.0.0",
    "cronstrue": "~2.2.0",
    "date-fns": "~2.29.3",
    "debug": "~4.3.4",
    "ergo-wasm": "link:../wasm/pkg",
    "fast-deep-equal": "~3.1.3",
    "focus-svelte": "~0.3.4",
    "json5": "~2.2.1",
    "just-camel-case": "~6.1.1",
    "just-capitalize": "~3.1.1",
    "just-clone": "~6.1.1",
    "just-debounce-it": "~3.1.1",
    "just-is-empty": "~3.2.1",
    "just-once": "~2.1.1",
    "just-pascal-case": "~3.1.1",
    "just-throttle": "~4.1.1",
    "just-zip-it": "~3.1.1",
    "ky": "~0.32.2",
    "lezer-json5": "~2.0.0",
    "localforage": "~1.10.0",
    "lodash-es": "~4.17.21",
    "path-browserify": "~1.0.1",
    "perfect-arrows": "~0.3.7",
    "resolve.exports": "~1.1.0",
    "rollup": "~2.70.2",
    "sorters": "~1.1.0",
    "typescript": "^4.9.4"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "./jest-setup.js"
    ],
    "transform": {
      "^.+\\.svelte$": [
        "./node_modules/svelte-jester/dist/transformer.mjs",
        {
          "preprocess": true
        }
      ],
      "^.+\\.(j|t)s$": "ts-jest",
      "^.+\\.p?css$": "jest-transform-css"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "extensionsToTreatAsEsm": [
      ".ts",
      ".svelte"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "useESM": true
      }
    }
  }
}
