{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskInput",
  "type": "object",
  "required": [
    "actions",
    "enabled",
    "name",
    "state_machine_config",
    "state_machine_states",
    "triggers"
  ],
  "properties": {
    "actions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/TaskActionInput"
      }
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "enabled": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "state_machine_config": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/StateMachine"
      }
    },
    "state_machine_states": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/StateMachineData"
      }
    },
    "triggers": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/TaskTriggerInput"
      }
    }
  },
  "definitions": {
    "ActionInvokeDef": {
      "type": "object",
      "required": [
        "data",
        "task_action_local_id"
      ],
      "properties": {
        "data": {
          "$ref": "#/definitions/ActionPayloadBuilder"
        },
        "task_action_local_id": {
          "type": "string"
        }
      }
    },
    "ActionInvokeDefDataField": {
      "anyOf": [
        {
          "description": "A path from the input that triggered the action, and whether or not it's required.",
          "type": "object",
          "required": [
            "c",
            "t"
          ],
          "properties": {
            "c": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                },
                {
                  "type": "boolean"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            },
            "t": {
              "type": "string",
              "enum": [
                "Input"
              ]
            }
          }
        },
        {
          "description": "A path from the state machine's context, and whether or not it's required.",
          "type": "object",
          "required": [
            "c",
            "t"
          ],
          "properties": {
            "c": {
              "type": "array",
              "items": [
                {
                  "type": "string"
                },
                {
                  "type": "boolean"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            },
            "t": {
              "type": "string",
              "enum": [
                "Context"
              ]
            }
          }
        },
        {
          "description": "A constant value",
          "type": "object",
          "required": [
            "c",
            "t"
          ],
          "properties": {
            "c": true,
            "t": {
              "type": "string",
              "enum": [
                "Constant"
              ]
            }
          }
        }
      ]
    },
    "ActionPayloadBuilder": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "c",
            "t"
          ],
          "properties": {
            "c": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/ActionInvokeDefDataField"
              }
            },
            "t": {
              "type": "string",
              "enum": [
                "FieldMap"
              ]
            }
          }
        }
      ]
    },
    "EventHandler": {
      "type": "object",
      "required": [
        "trigger_id"
      ],
      "properties": {
        "actions": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/ActionInvokeDef"
          }
        },
        "target": {
          "anyOf": [
            {
              "$ref": "#/definitions/TransitionTarget"
            },
            {
              "type": "null"
            }
          ]
        },
        "trigger_id": {
          "type": "string"
        }
      }
    },
    "StateDefinition": {
      "type": "object",
      "required": [
        "on"
      ],
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "on": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EventHandler"
          }
        }
      }
    },
    "StateMachine": {
      "type": "object",
      "required": [
        "initial",
        "name",
        "on",
        "states"
      ],
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "initial": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "on": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EventHandler"
          }
        },
        "states": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/StateDefinition"
          }
        }
      }
    },
    "StateMachineData": {
      "type": "object",
      "required": [
        "context",
        "state"
      ],
      "properties": {
        "context": true,
        "state": {
          "type": "string"
        }
      }
    },
    "TaskActionInput": {
      "type": "object",
      "required": [
        "action_id",
        "name"
      ],
      "properties": {
        "account_id": {
          "type": [
            "integer",
            "null"
          ],
          "format": "int64"
        },
        "action_id": {
          "type": "integer",
          "format": "int64"
        },
        "action_template": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        },
        "name": {
          "type": "string"
        }
      }
    },
    "TaskTriggerInput": {
      "type": "object",
      "required": [
        "input_id",
        "name"
      ],
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "input_id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "TransitionTarget": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "c",
            "t"
          ],
          "properties": {
            "c": {
              "type": "string"
            },
            "t": {
              "type": "string",
              "enum": [
                "One"
              ]
            }
          }
        }
      ]
    }
  }
}