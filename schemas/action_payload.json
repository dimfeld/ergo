{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ActionPayload",
  "type": "object",
  "required": [
    "account_required",
    "action_category_id",
    "executor_id",
    "executor_template",
    "name",
    "template_fields"
  ],
  "properties": {
    "account_required": {
      "type": "boolean"
    },
    "account_types": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "action_category_id": {
      "type": "integer",
      "format": "int64"
    },
    "action_id": {
      "type": [
        "integer",
        "null"
      ],
      "format": "int64"
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "executor_id": {
      "type": "string"
    },
    "executor_template": {
      "type": "object",
      "additionalProperties": true
    },
    "name": {
      "type": "string"
    },
    "template_fields": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/TemplateField"
      }
    }
  },
  "definitions": {
    "TemplateField": {
      "type": "object",
      "required": [
        "format",
        "optional"
      ],
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "format": {
          "$ref": "#/definitions/TemplateFieldFormat"
        },
        "optional": {
          "type": "boolean"
        }
      }
    },
    "TemplateFieldFormat": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "string_array"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "integer"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "float"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "boolean"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "object"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "choices",
            "type"
          ],
          "properties": {
            "choices": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "max": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint",
              "minimum": 0.0
            },
            "min": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint",
              "minimum": 0.0
            },
            "type": {
              "type": "string",
              "enum": [
                "choice"
              ]
            }
          }
        }
      ]
    }
  }
}